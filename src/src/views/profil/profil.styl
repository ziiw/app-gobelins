#profil
    width 100%
    min-height 100vh
    
    .contentProfil
        padding-top 80px
        background-color white
        
        h2
            font-size 1.1em
            color blue
            text-transform none
            margin-bottom 15px

        .line
            width 100%
            height 2px 
            background blue
            margin-bottom 20px
            margin-top 20px

        // Header
        .header
            height 150px
            background-color #333
            display flex
            align-items center
            color white

            .photo
                height 100%
                margin-right 20px

            .details
                li
                    list-style none
                    margin 5px 0
                    font-size 15px

                    h1
                        text-transform uppercase
                        font-size 24px
                    

            .line
                background-color grey
                margin 0
                width 100px


        // Informations
        .informations
            padding-left 20px
            padding-right 20px
            padding-top 20px

            li
                margin-top 10px


        // Works
        .works h2
            margin-left 20px

        .workList
            
            li 
                width 25%;
                float left
                
                img
                    width 100%
