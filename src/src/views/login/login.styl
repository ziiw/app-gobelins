#login
	width 100%
	height 100vh
	background-color #22378a
	text-align center
	position relative
	
	.logo
		width 200px
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		opacity 0
		
		&.show
			transition 0.5s opacity ease
			opacity 1
		
	.loginMenu
		position absolute
		bottom 15%
		left 50%
		transform: translate(-50%, 0%)
		z-index: 1000
		
		button
			margin-bottom 30px
			color white
			background none
			border none
			font-size 14px
			opacity 0
			
			&:focus
				outline none
			
			&:last-of-type
				margin-bottom 0px
	
	.signInInput
		position absolute
		bottom 12%
		left 50%
		transform translate(-50%, 0%)
		z-index 100
		
		input
			width 100%
			text-align center
			margin-bottom 20px
			color white
			background none
			border none
			height 30px
			font-size 13px
			opacity 0
			
			+placeholder()
				color white
				font-size 14px
				padding-bottom 16px
			
			&:focus
				outline none
			
			&last-of-type
				margin-bottom 0px
	
	.signUpInput
		position absolute
		top 170px
		left 50%
		padding-bottom 60px
		transform translate(-50%, 0%)
		z-index 100
		
		input
			width 100%
			position relative
			top 35px
			text-align center
			margin-bottom 25px
			color white
			background none
			border none
			height 30px
			font-size 13px
			opacity 0
			
			+placeholder()
				color white
				font-size 14px
				padding-bottom 16px
			
			&:focus
				outline none
			
			&last-of-type
				margin-bottom 0px
					
	.btnForm
		position fixed
		bottom 0px
		width 100%
		height 50px
		opacity 0
		z-index 1001
		display flex
		
		div
			width 50%
			height 50px
			color white
			border none
			font-size 12px
			line-height 50px
			border-radius none
			
			&.btnCancel
				background-color #192b74
			
			&.btnValid
				background-color #283e95