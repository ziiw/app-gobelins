#login
	width 100%
	height 100%
	background-color #22378a
	text-align center
	
	.logo
		position relative
		width 50%
		max-width 490px
		margin-top 50%
		transform translate(0%, -50%)
		
	.loginMenu
		margin-top 25%
		
		button
			margin-bottom 30px
			color white
			background none
			border none
			font-size 14px
			opacity 0
			
			&:last-of-type
				margin-bottom 0px
	
	.signInInput
		position relative
		top -80px
		
		input
			text-align center
			margin-bottom 20px
			color white
			background none
			border none
			height 30px
			font-size 14px
			opacity 0
			
			+placeholder()
				color white
				font-size 14px
				padding-bottom 16px
			
			&:focus
				outline none
			
			&last-of-type
				margin-bottom 0px