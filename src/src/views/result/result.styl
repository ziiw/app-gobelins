#result
	width 100%
	min-height 100vh
	padding-top 80px
	
	ul
		padding-left 20px
		padding-right 20px
		
		a
			color black
			text-decoration none
			
		li
			display flex
			align-items center
			width 100%
			height 70px
			border-bottom 2px solid #ddd
			
			.visuel
				width 55px
				height @width
				border-radius 50%
				background-color #ddd
				margin-right 20px
			
			.infos
				.name
					text-transform uppercase
					font-size 14px
					letter-spacing 0.2px
				
				.job, .location
					font-family "Montserrat-Light"
					font-size 13px
					color #555
					margin-top 4px