#search
	background-color #fff
	min-height 100vh
	
	.filters
		padding-top 135px
		padding-left 20px
		padding-right 20px
		// padding-bottom 85px
		
		h2
			position fixed
			top 80px
			width 100%
			left 0px
			height 50px
			line-height 50px
			text-transform uppercase
			text-align center
			color blue
			border-bottom 2px solid #ddd
			background rgba(255,255,255,0.95)
			font-family "Montserrat-Light"
			font-size 13px
			z-index 2000
			
		ul
			position relative
			// margin-top 135px
			width 100%
			padding-bottom 115px
			z-index 700
			
			&.choice
				opacity 0
				display none
				left 15px
				text-align left
				z-index 800
				
				li
					p
						&.left
							width 100%
							float left
						&.right
							width 0%
							float right
							text-align right
							font-weight bold
				
					&:first-child
						height 40px
						line-height 40px
						font-family Montserrat-Bold
						font-size 13px
			
			li
				width 100%
				height 70px
				line-height 70px
				font-size 15px
				border-bottom 2px solid #ddd
				text-transform uppercase
				
				p
					&.left
						width 30%
						float left
					&.right
						width 70%
						float right
						text-align right
						font-weight bold
		
	.disabled-link
		pointer-events none
		
		.submit
			transition 0.25s background
			background grey
		
	.submit
		position fixed
		bottom 0px
		width 100%
		height 60px
		background blue
		transition 0.25s background
		text-align center
		line-height 55px
		color white
		text-transform uppercase
		font-family "Montserrat-Bold"
		z-index 1001
		
		.total
			opacity 0.7
			font-size 10px
			font-family "Montserrat-Light"
			position relative
			top -39px
			transition 0.5s opacity
			
			&.hide
				transition 0.5s opacity
				opacity 0