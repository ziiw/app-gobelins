#search
	
	.filters
		margin-top 65px
		padding-left 20px
		padding-right 20px
		padding-bottom 100px
		
		h2
			position fixed
			top 65px
			width 100%
			left 0px
			height 50px
			line-height 50px
			text-transform uppercase
			text-align center
			color blue
			border-bottom 2px solid #ddd
			background rgba(255,255,255,0.95)
			font-family "Montserrat-Light"
			font-size 13px
			z-index 1000
			
		ul
			position absolute
			top 115px
			width calc(100% - 40px)
			padding-bottom 115px
			z-index 999
			
			&.choice
				text-align right
			
			li
				width 100%
				height 70px
				line-height 70px
				font-size 15px
				border-bottom 2px solid #ddd
				text-transform uppercase
		
	
	.submit
		position fixed
		bottom 0px
		width 100%
		height 60px
		background blue
		text-align center
		line-height 60px
		color white
		text-transform uppercase
		font-family "Montserrat-Bold"
		z-index 1001