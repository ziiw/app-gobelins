.adProfil
  position: relative
  min-height 70px
  padding 10px borderMargin
  display: flex
  align-items: center;
  color black
  font-family "Montserrat-Light"

  &:after
    content ''
    position: absolute
    bottom: 0px
    left: borderMargin
    right: borderMargin
    height: 2px
    background-color: grey

  .photo
    display: block
    width: auto
    height: 70px

  .informations
    margin-left 20px

    h2, p
      margin 5px 0

  .name
    font-family "Montserrat-Bold"
    text-transform uppercase
    font-size: 1.1em
